
<selector xmlns:android="http://schemas.android.com/apk/res/android">


    <item android:state_checked="false" >

        <layer-list

            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape android:shape="rectangle">

                    <solid android:color="@color/Gray_backgroundfb"/>

                    <corners android:radius="30dp"/>

                    <padding android:bottom="3dp"
                             android:right="3dp"
                             android:left="3dp"
                             android:top="3dp"/>

                    <size
                        android:width="30dp"
                        android:height="30dp"/>
                </shape>
            </item>


            <item>

                <shape android:shape="rectangle">


                    <solid android:color="@color/White"/>

                    <corners android:radius="20dp"/>

                    <size
                        android:width="25dp"
                        android:height="25dp"/>
                </shape>
            </item>


        </layer-list>

    </item>

    <item android:state_checked="true">
        <layer-list

            xmlns:android="http://schemas.android.com/apk/res/android">

            <item>

                <shape android:shape="rectangle">

                    <solid android:color="@color/Red"/>

                    <corners android:radius="30dp"/>

                    <padding android:bottom="3dp"
                             android:right="3dp"
                             android:left="3dp"
                             android:top="3dp"/>

                    <size
                        android:width="30dp"
                        android:height="30dp"/>
                </shape>
            </item>


            <item>

                <shape android:shape="rectangle">


                    <solid android:color="@color/White"/>

                    <corners android:radius="20dp"/>

                    <size
                        android:width="25dp"
                        android:height="25dp"/>
                </shape>
            </item>


        </layer-list>
    </item>

</selector>