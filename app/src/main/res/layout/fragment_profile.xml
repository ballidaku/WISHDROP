<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:tools = "http://schemas.android.com/tools"
              android:layout_width = "match_parent"
              android:layout_height = "match_parent"
              android:background = "@color/Gray_backgroundfb"
              android:orientation = "vertical"
              tools:context = "Fragments.Profile">

    <ScrollView
        android:layout_width = "match_parent"
        android:layout_height = "match_parent">


        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical">


            <FrameLayout
                android:layout_width = "match_parent"
                android:layout_height = "250dp">


                <ImageView
                    android:id = "@+id/imgv_blur"
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:scaleType = "fitXY"
                    android:src = "@mipmap/img_profilebg"/>

                <ImageView
                    android:id = "@+id/imgv_profile"
                    android:layout_width = "120dp"
                    android:layout_height = "120dp"
                    android:layout_gravity = "center"
                    android:background = "@drawable/image_back_red_circle"
                    android:padding = "2dp"
                    android:src = "@mipmap/profile_pic"/>

                <ImageView
                    android:id = "@+id/imgv_camera"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:layout_gravity = "bottom|right"
                    android:padding = "15dp"
                    android:src = "@mipmap/ic_camera"/>


            </FrameLayout>


            <android.support.v7.widget.CardView
                xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:app = "http://schemas.android.com/apk/res-auto"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:elevation = "4dp"
                app:cardCornerRadius = "4dp"
                app:cardElevation = "4dp">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:background = "@android:color/white"
                    android:orientation = "vertical"
                    android:padding = "5dp">

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:background = "@android:color/white"
                        android:orientation = "horizontal"
                        android:padding = "6dp">

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "1"
                            android:text = "User Name"
                            android:textColor = "@color/TextHeading"/>

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "2"
                            android:text = "Eva Watson"
                            android:textColor = "@color/TextValue"/>


                    </LinearLayout>

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginLeft = "3dp"
                        android:layout_marginRight = "3dp"
                        android:background = "@color/Gray_backgroundfb"/>

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:background = "@android:color/white"
                        android:orientation = "horizontal"
                        android:padding = "6dp">

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "1"
                            android:text = "Age"
                            android:textColor = "@color/TextHeading"/>

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "2"
                            android:text = "26"
                            android:textColor = "@color/TextValue"/>


                    </LinearLayout>

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginLeft = "3dp"
                        android:layout_marginRight = "3dp"
                        android:background = "@color/Gray_backgroundfb"/>

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:background = "@android:color/white"
                        android:orientation = "horizontal"
                        android:padding = "6dp">

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "1"
                            android:text = "Location"
                            android:textColor = "@color/TextHeading"/>

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "2"
                            android:text = "California"
                            android:textColor = "@color/TextValue"/>


                    </LinearLayout>

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginLeft = "3dp"
                        android:layout_marginRight = "3dp"
                        android:background = "@color/Gray_backgroundfb"/>

                    <LinearLayout
                        android:layout_width = "match_parent"
                        android:layout_height = "match_parent"
                        android:background = "@android:color/white"
                        android:orientation = "horizontal"
                        android:padding = "6dp">

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "1"
                            android:text = "Email"
                            android:textColor = "@color/TextHeading"/>

                        <TextView
                            android:layout_width = "0dp"
                            android:layout_height = "wrap_content"
                            android:layout_weight = "2"
                            android:text = "abc@example.com"
                            android:textColor = "@color/TextValue"/>


                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                xmlns:android = "http://schemas.android.com/apk/res/android"
                xmlns:app = "http://schemas.android.com/apk/res-auto"
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:layout_margin = "5dp"
                android:elevation = "4dp"
                app:cardCornerRadius = "4dp"
                app:cardElevation = "4dp">

                <LinearLayout
                    android:layout_width = "match_parent"
                    android:layout_height = "match_parent"
                    android:background = "@android:color/white"
                    android:orientation = "vertical"
                    android:padding = "5dp">

                    <TextView
                        android:layout_width = "match_parent"
                        android:layout_height = "wrap_content"
                        android:padding = "6dp"
                        android:text = "Pictures"
                        android:textColor = "@color/Red"/>

                    <View
                        android:layout_width = "match_parent"
                        android:layout_height = "1dp"
                        android:layout_marginLeft = "3dp"
                        android:layout_marginRight = "3dp"
                        android:background = "@color/Gray_backgroundfb"/>


                    <LinearLayout android:layout_width = "match_parent"
                                  android:layout_height = "wrap_content"
                                  android:orientation = "horizontal">

                        <android.support.v7.widget.RecyclerView
                            android:id = "@+id/recycleview_otherprofile_images"
                            android:layout_width = "wrap_content"
                            android:layout_height = "wrap_content"
                            android:scrollbars = "horizontal">

                        </android.support.v7.widget.RecyclerView>


                       <!-- <ImageView
                            android:id="@+id/imgv_add"
                            android:layout_width = "100dp"
                            android:layout_height = "100dp"
                            android:scaleType="fitXY"
                            android:padding = "3dp"
                            android:src = "@mipmap/add_image"/>-->

                    </LinearLayout>


                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </ScrollView>


    <TextView
        android:layout_width = "match_parent"
        android:layout_height = "50dp"
        android:layout_gravity = "bottom"
        android:background = "@drawable/red_flat_corner_selector"
        android:clickable = "true"
        android:gravity = "center"
        android:text = "EDIT"
        android:textColor = "@color/White"
        android:textSize = "18sp"
        android:textStyle = "bold"/>


</LinearLayout>
