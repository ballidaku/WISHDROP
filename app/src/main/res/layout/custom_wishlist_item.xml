<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id = "@+id/container"
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    xmlns:card_view = "http://schemas.android.com/tools"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:orientation = "vertical">

    <android.support.v7.widget.CardView
        android:id = "@+id/cardv_profile"
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        app:cardUseCompatPadding = "true"
        card_view:cardCornerRadius = "10dp"
        card_view:cardElevation = "5dp">

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:orientation = "vertical">

            <HelperClasses.ImageViewSmoothScroll
                android:id = "@+id/imgv_search_profile"
                android:layout_width = "wrap_content"
                android:layout_height = "wrap_content"
                android:layout_gravity = "center"
                android:background = "@android:color/white"
                android:scaleType = "centerInside"
                android:src = "@mipmap/ic_launcher"/>

            <LinearLayout
                android:layout_width = "match_parent"
                android:layout_height = "wrap_content"
                android:gravity = "center_vertical"
                android:orientation = "horizontal"
                android:padding = "5dp">

                <ImageView
                    android:id = "@+id/imgv_profile_pic"
                    android:layout_width = "wrap_content"
                    android:layout_height = "wrap_content"
                    android:padding="5dp"
                    android:src = "@mipmap/ic_star_hover"/>

                <TextView
                    android:id = "@+id/txtv_name"
                    android:layout_width = "0dp"
                    android:layout_height = "match_parent"
                    android:layout_marginLeft = "5dp"
                    android:layout_weight = "1"
                    android:gravity = "center_vertical"
                    android:text = "#Skatepark"
                    android:textColor = "@color/Black"/>


            </LinearLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>