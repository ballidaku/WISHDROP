              android:layout_height = "match_parent"
              android:background = "@color/Gray_backgroundfb"
              android:orientation = "vertical">


    <FrameLayout
        android:layout_width = "match_parent"
        android:layout_height = "200dp">


        <ImageView
            android:id = "@+id/imgv_blur"
            android:layout_width = "match_parent"
            android:layout_height = "match_parent"
            android:scaleType = "fitXY"
            android:src = "@mipmap/img_profilebg"/>

        <ImageView
            android:id = "@+id/imgv_profile"
            android:layout_width = "120dp"
            android:layout_height = "120dp"
            android:layout_gravity = "center"
            android:background = "@drawable/image_back_red_circle"
            android:padding = "2dp"
            android:src = "@mipmap/profile_pic"/>


    </FrameLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:background = "@color/Red"
        android:orientation = "horizontal">


        <TextView
            android:id="@+id/textv_wishes"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:drawableTop = "@mipmap/ic_wish"
            android:gravity = "center"
            android:padding = "10dp"
            android:text = "Wishes"
            android:textColor = "@color/White"
            android:textStyle = "bold"/>

        <View
            android:layout_width = "2dp"
            android:layout_height = "match_parent"
            android:layout_marginBottom = "5dp"
            android:layout_marginTop = "5dp"
            android:background = "@color/White"/>

        <TextView
            android:id="@+id/txtv_message"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:drawableTop = "@mipmap/ic_message"
            android:gravity = "center"
            android:padding = "10dp"
            android:text = "Message"
            android:textColor = "@color/White"
            android:textStyle = "bold"/>

        <View
            android:layout_width = "2dp"
            android:layout_height = "match_parent"
            android:layout_marginBottom = "5dp"
            android:layout_marginTop = "5dp"
            android:background = "@color/White"/>

        <TextView
            android:id="@+id/textv_friends"
            android:layout_width = "0dp"
            android:layout_height = "wrap_content"
            android:layout_weight = "1"
            android:drawableTop = "@mipmap/ic_friends"
            android:gravity = "center"
            android:padding = "10dp"
            android:text = "Friends"
            android:textColor = "@color/White"
            android:textStyle = "bold"/>


    </LinearLayout>


